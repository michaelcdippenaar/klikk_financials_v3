#!/bin/bash
# Pull latest code from GitHub
# Usage: ./gitpull [branch]

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

PROJECT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
BRANCH="${1:-main}"

echo -e "${BLUE}========================================${NC}"
echo -e "${BLUE}  Git Pull${NC}"
echo -e "${BLUE}========================================${NC}"
echo ""

cd "$PROJECT_DIR" || exit 1

# Show current status
echo -e "${YELLOW}Current branch: $(git branch --show-current)${NC}"
echo -e "${YELLOW}Current commit: $(git log -1 --oneline)${NC}"
echo ""

# Check for uncommitted changes
if ! git diff-index --quiet HEAD --; then
    echo -e "${YELLOW}Warning: You have uncommitted changes${NC}"
    echo "Stashing changes..."
    git stash
    STASHED=true
else
    STASHED=false
fi

# Fetch and pull
echo -e "${YELLOW}Pulling latest code from branch: $BRANCH${NC}"
echo ""

if git fetch origin && git pull origin "$BRANCH"; then
    echo ""
    echo -e "${GREEN}✓ Code updated successfully${NC}"
    echo ""
    echo -e "${BLUE}Recent commits:${NC}"
    git log --oneline -5
    echo ""
    
    # Restore stashed changes if any
    if [ "$STASHED" = true ]; then
        echo -e "${YELLOW}Restoring stashed changes...${NC}"
        git stash pop
    fi
else
    echo ""
    echo -e "${RED}✗ Git pull failed${NC}"
    
    # Restore stashed changes if any
    if [ "$STASHED" = true ]; then
        echo -e "${YELLOW}Restoring stashed changes...${NC}"
        git stash pop
    fi
    
    exit 1
fi

echo ""
echo -e "${BLUE}========================================${NC}"
