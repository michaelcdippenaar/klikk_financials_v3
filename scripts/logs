#!/bin/bash
# View gunicorn logs live (refreshing)
# Usage: ./logs

# Colors
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

SERVICE_NAME="klikk-financials"
PROJECT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

echo -e "${BLUE}========================================${NC}"
echo -e "${BLUE}  Gunicorn Logs (Live)${NC}"
echo -e "${BLUE}========================================${NC}"
echo ""
echo -e "${YELLOW}Press Ctrl+C to exit${NC}"
echo ""

# Check if using systemd service
if systemctl is-active --quiet "$SERVICE_NAME" 2>/dev/null; then
    echo -e "${GREEN}Following systemd service logs...${NC}"
    echo ""
    sudo journalctl -u "$SERVICE_NAME" -f
elif pgrep -f "gunicorn.*klikk_business_intelligence.wsgi" > /dev/null; then
    echo -e "${GREEN}Gunicorn process found${NC}"
    
    # Check for log files
    if [ -f "/var/log/gunicorn/error.log" ]; then
        echo "Following: /var/log/gunicorn/error.log"
        tail -f /var/log/gunicorn/error.log
    elif [ -f "$PROJECT_DIR/logs/gunicorn-error.log" ]; then
        echo "Following: $PROJECT_DIR/logs/gunicorn-error.log"
        tail -f "$PROJECT_DIR/logs/gunicorn-error.log"
    else
        echo -e "${YELLOW}No log files found. Try: sudo journalctl -u $SERVICE_NAME -f${NC}"
    fi
else
    echo -e "${YELLOW}Gunicorn service not found or not running.${NC}"
    echo "Check service status: sudo systemctl status $SERVICE_NAME"
    exit 1
fi
